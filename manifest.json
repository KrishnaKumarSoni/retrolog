{
  "manifest_version": 3,
  "name": "RetroLog",
  "version": "1.0.0",
  "description": "Track and log your daily activities with karma points",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "alarms",
    "background"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "72": "icons/icon72.png",
      "128": "icons/icon128.png",
      "144": "icons/icon144.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "72": "icons/icon72.png",
    "128": "icons/icon128.png",
    "144": "icons/icon144.png"
  }
} 